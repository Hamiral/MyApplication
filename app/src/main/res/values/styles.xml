<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/BoutonNormal</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <!--Création d'un style personnalisé aux couleurs de Nomosphere-->
    <style name="StyleNomosphere" parent="@style/AppTheme">

        <item name="android:actionMenuTextColor">@color/bleuNomosphere</item>
        <item name="android:buttonStyle">@style/BoutonNomosphere</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

    </style>

    <!-- Boutton Personnalisé aux couleurs de Nomosphere-->
    <style name="BoutonNomosphere" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/grisNomosphereLogo</item>
        <item name="android:color">#22a6d6</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_default_modificated</item>
    </style>

    <style name="BoutonNormal" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/grisNomosphereLogo</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- ActionBar style -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/bleuNomosphere</item>
        <item name="android:backgroundSplit">@color/bleuNomosphere</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
