<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:icon">@drawable/ic_logo_client</item>
        <item name="android:buttonStyle">@style/BoutonNormal</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="StyleNomosphere" parent="@style/AppTheme">
        <item name="android:icon">@drawable/ic_logo_nomosphere</item>
        <item name="android:actionMenuTextColor">@color/bleuNomosphere</item>
        <item name="android:buttonStyle">@style/BoutonNomosphere</item>
    </style>



    <!-- Bouttons PersonnalisÃ©s Nomosphere-->
    <style name="BoutonNomosphere" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/grisNomosphereLogo</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BoutonNormal" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/grisNomosphereLogo</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
