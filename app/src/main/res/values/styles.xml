<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:icon">@drawable/ic_logo_client</item>
        <item name="android:buttonStyle">@style/BoutonNormal</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="StyleNomosphere" parent="@style/AppTheme">
        <item name="android:icon">@drawable/ic_logo_nomosphere</item>
        <item name="android:actionMenuTextColor">@color/bleuNomosphere</item>
        <item name="android:buttonStyle">@style/BoutonNomosphere</item>
    </style>



    <!-- Bouttons PersonnalisÃ©s Nomosphere-->
    <style name="BoutonNomosphere">
        <item name="android:textColor">@color/grisNomosphereLogo</item>
        <item name="android:background">@android:drawable/btn_default</item>
        <item name="android:backgroundTint">@color/bleuNomosphere</item>
        <item name="android:backgroundTintMode">src_atop</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BoutonNormal">
        <item name="android:textColor">@color/grisNomosphereLogo</item>
        <item name="android:background">@android:drawable/btn_default</item>
        <item name="android:backgroundTint">@color/grisPinchard</item>
        <item name="android:backgroundTintMode">src_atop</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
