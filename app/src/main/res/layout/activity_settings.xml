<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pi2013.myapplication.SettingsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_client"
        android:contentDescription="@string/description_launch_image_client"
        android:baselineAlignBottom="false"
        android:src="@drawable/ic_logo_client"
        android:alpha=".25"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:weightSum="1">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/language_choice"
            android:spinnerMode="dropdown" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/switch_settings_wifi"
            android:id="@+id/state_wifi"
            android:checked="false" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/switch_settings_notifications"
            android:id="@+id/notifications"
            android:checked="false" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/switch_settings_hotspot"
            android:id="@+id/Hotspot_switch"
            android:checked="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_settings_user_agreement"
            android:id="@+id/user_agreement"
            android:layout_weight="0.07"
            android:onClick="start_user_agreement_activity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_settings_about"
            android:id="@+id/about"
            android:layout_weight="0.07"
            android:onClick="start_about_activity"/>

    </LinearLayout>
</RelativeLayout>
