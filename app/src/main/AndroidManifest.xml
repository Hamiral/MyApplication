<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pi2013.myapplication">

    <application
        android:configChanges="locale"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_client"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:launchMode="singleInstance"
            android:parentActivityName=".MyActivity" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".BaseActivity"
            android:label="@string/title_activity_base"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".LaunchActivity"
            android:label="@string/title_activity_launch" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConnexionActivity"
            android:label="@string/title_activity_connexion"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".AccountManagementActivity"
            android:label="@string/title_activity_account_management"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".HotspotActivity"
            android:label="@string/title_activity_hotspot"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".UserAgreementActivity"
            android:label="@string/title_activity_user_agreement"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".LostAccountActivity"
            android:label="@string/title_activity_lost_account"
            android:launchMode="singleInstance">
        </activity>
    </application>

</manifest>
